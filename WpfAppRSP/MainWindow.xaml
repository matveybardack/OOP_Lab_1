<Window x:Class="WpfAppRSP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppRSP"
        mc:Ignorable="d"
    Title="Rock-Scissors-Paper" Height="800" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="5">
            
            <Button x:Name="btnBack"
                    Content="Назад"
                    Margin="5"
                    Width="75"
                    Click="btnBack_Click"
                    FontSize="14"
                    FontFamily="Bahnschrift" />
            
            <Button x:Name="btnForward"
                    Content="Вперёд"
                    Margin="5"
                    Width="75"
                    Click="btnForward_Click"
                    FontSize="14"
                    FontFamily="Bahnschrift" />
            
            <Label x:Name="lbScore"
                   Content="Очки: 0"
                   Width="100"
                   Margin="5"
                   FontSize="14"
                   FontFamily="Bahnschrift" />
        </StackPanel>

        <Canvas x:Name="RSPCanvas"
                Grid.Row="1"
                Width="600"
                Height="600"
                Background="#FFE6E6E6"/>

    </Grid>
</Window>
